@model LearnEnglish.ViewModels.TasksABCViewModel
@{
    ViewData["Title"] = "Strona główna";
}

@if (ViewBag.Standard == true)

{
    <center>
        <form asp-action="Index" method="post">
            @foreach (var task in Model.TaskABC)
            {
                <div class="container box-color">
                    <div class="row border">
                        <div class="col-sm-12 margin-zt">
                            <h4><b>Zadanie</b></h4>
                            <h5>@task.Question</h5>
                        </div>
                        <div class="col-sm-4">
                            <h5><b>A</b></h5>
                            <h6><input type="checkbox" name="answer" value="@task.Option1" onclick="MutExChkList(this);" />
                                @task.Option1</h6>
                        </div>
                        <div class="col-sm-4">
                            <h5><b>B</b></h5>
                            <h6><input type="checkbox" name="answer" value="@task.Option2" onclick="MutExChkList(this);" />
                                @task.Option2</h6>
                        </div>
                        <div class="col-sm-4">
                            <h5><b>C</b></h5>
                            <h6><input type="checkbox" name="answer" value="@task.Option3" onclick="MutExChkList(this);" />
                                @task.Option3</h6>
                        </div>
                    </div>
                </div>
            }
            <br />
            <div class="form-group">
                <input type="submit" value="Sprawdź odpowiedź" class="btn btn-primary" />
            </div>
        </form>
    </center>
}
